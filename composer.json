{
  "name": "nirbose/php-mc-serv",
  "type": "project",
  "autoload": {
    "psr-4": {
      "Nirbose\\PhpMcServ\\": "src/",
      "Tests\\": "tests/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "authors": [
    {
      "name": "Nirbose",
      "email": "nirbose2@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "php-64bit": "*",
    "monolog/monolog": "^3.9",
    "aternos/nbt": "^1.12",
    "ext-sockets": "*",
    "ext-gmp": "*",
    "react/socket": "^1.16",
    "react/async": "^4.3.0",
    "react/promise": "^3.2.0",
    "symfony/yaml": "^7.3"
  },
  "require-dev": {
    "pestphp/pest": "^3.8",
    "mockery/mockery": "^1.6",
    "phpstan/phpstan": "^2.1"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
